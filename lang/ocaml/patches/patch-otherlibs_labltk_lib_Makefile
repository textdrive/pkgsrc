+	@if test -d $(BINDIR); then : ; else $(BSD_INSTALL_DATA_DIR) $(BINDIR); fi
 	@case x$(TOOLCHAIN) in \
 	  xmingw|xmsvc) $(MAKE) install-batch ;; \
 	  *) 		$(MAKE) install-script ;; \
