#!@SH@
# $NetBSD: scan-client-start,v 1.2 2008/09/16 18:21:30 joerg Exp $

. ${PBULK_CONF:-@PBULK_CONFIG@}

set -e

if [ "${config_version}" != "@PBULK_CONFIG_VERSION@" ]; then
	echo "Your configuration has version ${config_version}."
	echo "This version of pbulk expects version @PBULK_CONFIG_VERSION@."
	exit 1
fi

for client in ${scan_clients}; do
	if [ -n "${chroot_create}" -a \
	     -n "${chroot_delete}" -a \
	     -n "${chroot_dir}" ]; then
		ssh $client "${chroot_create} ${chroot_dir}; PBULK_CONF=${PBULK_CONF} /usr/sbin/chroot ${chroot_dir} /bin/sh -c \"${pscan_prepare} && ${pscan} -c ${master_port_scan} -M ${make} ${pkgsrc}\"; ${chroot_delete} ${chroot_dir}" &
	else
		ssh $client "PBULK_CONF=${PBULK_CONF}; export PBULK_CONF; ${pscan_prepare} && ${pscan} -c ${master_port_scan} -M ${make} ${pkgsrc}" &
	fi
done
